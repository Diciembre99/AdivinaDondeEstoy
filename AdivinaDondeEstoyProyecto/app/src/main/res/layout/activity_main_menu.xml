<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Main_Menu">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbMenuMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/coffe"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMapaSpain"
        android:layout_width="305dp"
        android:layout_height="47dp"
        android:text="Mapa mitologia de EspaÃ±a"
        android:textColor="#FFFFFF"
        app:backgroundTint="@color/coffe"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbMenuMain"
        app:layout_constraintVertical_bias="0.587" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn2"
        android:layout_width="305dp"
        android:layout_height="47dp"
        android:text="Mapa mitologia Nordica"
        android:textColor="#FFFFFF"
        app:backgroundTint="@color/coffe"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbMenuMain"
        app:layout_constraintVertical_bias="0.708" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn3"
        android:layout_width="305dp"
        android:layout_height="47dp"
        android:text="Mapa mitologia Griega"
        android:textColor="#FFFFFF"
        app:backgroundTint="@color/coffe"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbMenuMain"
        app:layout_constraintVertical_bias="0.837" />

    <VideoView
        android:id="@+id/videoHome"
        android:layout_width="318dp"
        android:layout_height="179dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintBottom_toTopOf="@+id/btnMapaSpain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.807"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbMenuMain"
        app:layout_constraintVertical_bias="0.605" />

</androidx.constraintlayout.widget.ConstraintLayout>